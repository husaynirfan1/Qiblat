<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green_1"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:fontFamily="@font/tiltneon_regular"
                android:id="@+id/titleload"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:text="Getting your location"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleload"
                app:lottie_autoPlay="true"
                app:lottie_fileName="location.json"
                app:lottie_loop="true" />
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/figure8gif"
                app:layout_constraintTop_toBottomOf="@id/titleload"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:elevation="10dp"
                android:src="@drawable/figure8"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/subtitleload"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/tiltneon_regular"
                android:layout_weight="4"
                android:gravity="center"
                android:text="Please wait."
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/figure8gif"
                app:layout_constraintStart_toStartOf="@id/animationView"
                app:layout_constraintTop_toBottomOf="@id/animationView" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tips\nIf the qiblat direction still wrongly pointed, please calibrate your compass sensor by making the 8 figure calibration as shown above."
                android:textStyle="bold"
                android:fontFamily="@font/tiltneon_regular"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="@id/figure8gif"
                app:layout_constraintStart_toStartOf="@id/animationView"
                app:layout_constraintTop_toBottomOf="@id/subtitleload" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancelbutton_loadingui"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="Close"
                android:fontFamily="@font/tiltneon_regular"
                android:textAllCaps="false"
                android:textColor="@color/red"
                app:icon="@drawable/ic_baseline_cancel_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />




        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>